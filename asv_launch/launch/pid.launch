<launch>
    <node name="surge" pkg="pid" type="controller" ns="pose_controller" output="screen" >
        <param name="node_name" value="pose_surge_pid" />
        <param name="Kp" value="60.0"/>
        <param name="Ki" value="1.0"/>
        <param name="Kd" value="100.0"/>
        <param name="upper_limit" value="30"/>
        <param name="lower_limit" value="-30"/>
        <param name="windup_limit" value="1"/>
        <param name="cutoff_frequency" value="0.25"/>
        <param name="max_loop_frequency" value="10.0"/>
        <param name="min_loop_frequency" value="10.0"/>
        <remap from="setpoint" to="~/setpoint"/>
        <remap from="state" to="~/state"/>
        <remap from="control_effort" to="~/control_effort"/>
        <remap from="/diagnostics" to="~/diagnostics"/>
    </node>
    <node name="sway" pkg="pid" type="controller" ns="pose_controller" output="screen" >
        <param name="node_name" value="pose_sway_pid" />
        <param name="Kp" value="70.0"/>
        <param name="Ki" value="10.0"/>
        <param name="Kd" value="100.0"/>
        <param name="upper_limit" value="40"/>
        <param name="lower_limit" value="-40"/>
        <param name="windup_limit" value="1"/>
        <param name="cutoff_frequency" value="0.25"/>
        <param name="max_loop_frequency" value="10.0"/>
        <param name="min_loop_frequency" value="10.0"/>
        <remap from="setpoint" to="~/setpoint"/>
        <remap from="state" to="~/state"/>
        <remap from="control_effort" to="~/control_effort"/>
        <remap from="/diagnostics" to="~/diagnostics"/>
    </node>
    <node name="yaw" pkg="pid" type="controller" ns="pose_controller" output="screen" >
        <param name="node_name" value="pose_yaw_pid" />
        <param name="Kp" value="40.0"/>
        <param name="Ki" value="1.0"/>
        <param name="Kd" value="100.0"/>
        <param name="upper_limit" value="20"/>
        <param name="lower_limit" value="-20"/>
        <param name="windup_limit" value="1"/>
        <param name="cutoff_frequency" value="0.25"/>
        <param name="max_loop_frequency" value="10.0"/>
        <param name="min_loop_frequency" value="10.0"/>
        <param name="angle_error" value="true"/>
        <remap from="setpoint" to="~/setpoint"/>
        <remap from="state" to="~/state"/>
        <remap from="control_effort" to="~/control_effort"/>
        <remap from="/diagnostics" to="~/diagnostics"/>
    </node>
</launch>
