<?xml version="1.0"?>
<launch>
	<!-- SUCCESSFUL TEST AND DATA RECOVERY -->
	<arg name="bag_dir" default="/home/fft/test_results"/>
	<include file="$(find asv_navigation)/launch/um7.launch"/>
	<node pkg="asv_navigation" type="imu_transform_broadcaster.py" name="baselink_to_odom" output="screen"/>
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find asv_launch)/rviz/imu-config.rviz"/>
  	<node pkg="rosbag" type="record" name="flight_data_recorder" args="record -o $(arg bag_dir)/imu_variance_test /imu/data --split --size=2048"/>
</launch>